<%= provide(:title, 'Summoner Stats') %>
<h1>Summoner <%= @name %></h1>
<div style="color: white;">Summoner ID: <%= @masteries_id %>
</div>
<%= image_tag 'http://ddragon.leagueoflegends.com/cdn/5.12.1/img/profileicon/539.png' %>

<div class="container">
  <h2>Match History</h2>
  <table class='border'>
    <tbody class='border'>
    <tr>

      <td class="border">
        <h3><%= "#{@champ_image_icon}" %></h3>
        <%= image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/champion/#{@champ_image_icon}.png " %>
        <h3>Level: <%= @level %><br /><%= @name %></h3>
      </td>
      <td class='border'> <%= @game_type %> </td>
      <td class='border'>
        <div id="inventory">
          <div>
            <img src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/<%=@game_stats['item0']%>.png ">
            <img src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/<%=@game_stats['item1']%>.png ">
            <img src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/<%=@game_stats['item2']%>.png ">
            <img src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/<%=@game_stats['item3']%>.png ">
            <img src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/<%=@game_stats['item4']%>.png ">
            <img src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/<%=@game_stats['item5']%>.png ">
            <img src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/<%=@game_stats['item6']%>.png ">
        </div>
      </td>
      <td class="border"><%= @game_stats['championsKilled'] %>/<%= @game_stats['numDeaths'] %>/<%= @game_stats['assists'] %></td>
      <td class="border">
        <div>
            Gold: <%= @game_stats['goldEarned'] %>
        </div>
        <div>
            Minion Kills: <%= @game_stats['minionsKilled'] + @game_stats['neutralMinionsKilled'] %>
        </div>
      </td>
      <td class = 'border'>
        Game Length: <%= @game_stats['timePlayed'] %>
      </td>

    </tr>
    </tbody>
  </table>
 </div>
</div>





