%div{:style=>"color: white"} Summoner ID: #{@id}
%body.border
  %table{:style=>'background-color: white'}
    -#{:style=>"background-image: url('http://ddragon.leagueoflegends.com/cdn/img/champion/loading/#{@champ_name}_0.jpg'); background-size: cover"}
    %tr.border
      %td.border
        -#%h3 #{@champ_name}
        -#= image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/champion/#{@champ_name}.png "
        %h3 Level: #{@stats[:champLevel]}
      -#{@user.name}

      %td.border #{@game_type}
      %td.border.image
        =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{@stats[:item0]}.png"
        =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{@stats[:item1]}.png"
        =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{@stats[:item2]}.png"
        =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{@stats[:item3]}.png"
        =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{@stats[:item4]}.png"
        =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{@stats[:item5]}.png"
        =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{@stats[:item6]}.png"
      %td.border #{@stats[:kills]} / #{@stats[:deaths]} / #{@stats[:assists]}
      %td.border
        %div Gold: #{@stats[:goldEarned]}
        %div Minion Kills: #{@stats[:minionsKilled].to_i + @stats[:neutralMinionsKilled].to_i}
      %td.border
        Game Length: #{@game_time}

