%div{:style=>"color: white"} Summoner ID: #{ @user.id }
%body.border
  %table{:style=>'background-color: white'}
    %tr.border
      %td.border
        - match_history[:participants].each do |participant|
          %h3 Level: #{ participant[:stats][:champLevel] }
          =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/champion/#{get_champion_name(id: participant[:championId])}.png "
          %td.border #{ match_history[:matchType] }
          %td.border.image
            =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{participant[:stats][:item0]}.png"
            =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{participant[:stats][:item1]}.png"
            =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{participant[:stats][:item2]}.png"
            =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{participant[:stats][:item3]}.png"
            =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{participant[:stats][:item4]}.png"
            =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{participant[:stats][:item5]}.png"
            =image_tag "http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/#{participant[:stats][:item6]}.png"
          %td.border #{participant[:stats][:kills]} / #{participant[:stats][:deaths]} / #{participant[:stats][:assists] }
          %td.border
            %div Gold: #{ participant[:stats][:goldEarned] }
            %div Minion Kills: #{ participant[:stats][:minionsKilled] + participant[:stats][:neutralMinionsKilled] }
          %td.border
            Game Length: #{match_history[:matchDuration]}

