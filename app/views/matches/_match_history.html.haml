%div Summoner ID: #{ @user.id }
%body.border
  - match_history[:participants].each do |participant|
    %table{:style=>'background-color: white'}
      %tr
        %td.champ_icon
          %h3 #{get_champion_name(id: participant[:championId])}
          =image_tag champ_icon_url + "#{get_champion_name(id: participant[:championId])}.png"
          %h3 Level: #{ participant[:stats][:champLevel] }
        %td.border #{ match_history[:matchType] }
        %td.border.image
          - player_stats = participant[:stats]
          =image_tag item_img_url + "#{player_stats[:item0]}.png"
          =image_tag item_img_url + "#{player_stats[:item1]}.png"
          =image_tag item_img_url + "#{player_stats[:item2]}.png"
          %br
          =image_tag item_img_url + "#{player_stats[:item3]}.png"
          =image_tag item_img_url + "#{player_stats[:item4]}.png"
          =image_tag item_img_url + "#{player_stats[:item5]}.png"
          =image_tag item_img_url + "#{player_stats[:item6]}.png"
        %td.border #{participant[:stats][:kills]} / #{participant[:stats][:deaths]} / #{participant[:stats][:assists] }
        %td.border
          %div Gold: #{ participant[:stats][:goldEarned] }
          %div Minion Kills: #{ participant[:stats][:minionsKilled] + participant[:stats][:neutralMinionsKilled] }
        %td.border
          Game Length: #{match_history[:matchDuration]}

